@model WhatzQ.Criterion
@{
    ViewBag.Title = "Criteria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Criteria</h2>

@using (Html.BeginForm("Save", "Criteria"))
{
    <div class="form-group">
        <label>What's your Criteria Number?</label>
        @Html.TextBoxFor(m => m.CriteriaNum, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>What's your Factor Number?</label>
        @Html.TextBoxFor(m => m.Factor_Id, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DisplayName("What's related Subject ID of this factor?")
        @Html.TextBoxFor(m => m.Subject_Id, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DisplayName("What's your Criteria Description?")
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(o => o.CriteriaNum)
    <button type="submit" class="btn btn-primary">Save</button>
}